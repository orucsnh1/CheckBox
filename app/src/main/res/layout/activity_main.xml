<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seniha.checkbox.MainActivity">


    <TextView
        android:text="Sevdiğiniz meyveleri seçiniz."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:id="@+id/textView" />

    <CheckBox
        android:text="Elma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elma"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:text="Çilek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elma"
        android:layout_alignStart="@+id/elma"
        android:layout_marginTop="15dp"
        android:id="@+id/cilek" />

    <CheckBox
        android:text="Muz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cilek"
        android:layout_alignStart="@+id/cilek"
        android:layout_marginTop="21dp"
        android:id="@+id/muz" />

    <CheckBox
        android:text="Kivi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/muz"
        android:layout_alignStart="@+id/muz"
        android:layout_marginTop="26dp"
        android:id="@+id/kivi" />

    <CheckBox
        android:text="Portakal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kivi"
        android:layout_alignStart="@+id/kivi"
        android:layout_marginTop="27dp"
        android:id="@+id/portakal" />

    <CheckBox
        android:text="Karpuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portakal"
        android:layout_alignStart="@+id/portakal"
        android:layout_marginTop="30dp"
        android:id="@+id/karpuz" />

    <CheckBox
        android:text="Ananas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/karpuz"
        android:layout_alignStart="@+id/karpuz"
        android:layout_marginTop="40dp"
        android:id="@+id/ananas" />

    <Button
        android:text="Kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />
</RelativeLayout>
